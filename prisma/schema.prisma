generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model spot {
  user_id     Int
  address_zip String?   @db.VarChar(255)
  latitude    String    @db.VarChar(255)
  longitude   String    @db.VarChar(255)
  name        String    @db.VarChar(255)
  description String    @db.VarChar(255)
  spottype    spottype
  status      status
  created_at  DateTime  @db.Timestamptz(6)
  updated_at  DateTime? @db.Timestamptz(6)
  id          Int       @id(map: "spot_pk") @default(autoincrement())
  user        user      @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_user")
}

model user {
  id         Int       @id @default(autoincrement())
  lastname   String    @db.VarChar(255)
  firstname  String    @db.VarChar(255)
  username   String    @db.VarChar(255)
  email      String    @unique(map: "user_un") @db.VarChar(255)
  password   String    @db.VarChar(255)
  isadmin    Boolean?
  created_at DateTime  @db.Timestamptz(6)
  updated_at DateTime? @db.Timestamptz(6)
  islogged   Boolean?  @default(false)
  spot       spot[]
}

enum spottype {
  borda
  corrim_o @map("corrim√£o")
  rampa
  gap
}

enum status {
  approved
  pending
  declined
}
